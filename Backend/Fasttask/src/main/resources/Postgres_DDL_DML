CREATE DATABASE "Fasttask";

CREATE TABLE public.userr (
    id integer NOT NULL,
    username text,
    password text,
    rol text,
    email text,
    fecha_creacion timestamp without time zone,
    fecha_nacimiento timestamp without time zone
);

CREATE TABLE public.tablero (
    id integer NOT NULL,
    fecha_creacion timestamp without time zone,
    fecha_modificacion timestamp without time zone,
    imagen character varying(255),
    nombre character varying(255),
    usuario_fk bigint
);

CREATE TABLE public.lista (
    id integer NOT NULL,
    nombre text,
    tablero_fk integer,
    fecha_creacion timestamp without time zone,
    fecha_modificacion timestamp without time zone
);

CREATE TABLE public.task (
    id integer NOT NULL,
    nombre text,
    lista_fk integer,
    descripcion text,
    completada smallint,
    fecha_creacion timestamp without time zone,
    fecha_modificacion timestamp without time zone,
    fecha_task_ini timestamp without time zone,
    fecha_task_fin timestamp without time zone
);

